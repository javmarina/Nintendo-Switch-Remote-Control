<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane alignment="center" hgap="16" vgap="16" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.javmarina.client.fx.ClientController">

    <padding><Insets bottom="16" left="16" right="16" top="16" /></padding>

    <Label alignment="CENTER_RIGHT" maxWidth="1E308" text="Session ID" GridPane.columnIndex="0" GridPane.rowIndex="0" />
    <TextField fx:id="sessionIdField" GridPane.columnIndex="1" GridPane.rowIndex="0" />

    <Label alignment="CENTER_RIGHT" maxWidth="1E308" text="Controller input" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <ChoiceBox fx:id="controllerInput" maxWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <Label alignment="CENTER_RIGHT" maxWidth="1E308" text="Audio output" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <ChoiceBox fx:id="audioOutput" maxWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />

    <HBox alignment="CENTER" spacing="10" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="3">
        <Button fx:id="startButton" minWidth="80.0" style="-fx-background-color: #457ecd; -fx-text-fill: #ffffff; -fx-font-weight: bold;" text="Start" />
    </HBox>

</GridPane>
